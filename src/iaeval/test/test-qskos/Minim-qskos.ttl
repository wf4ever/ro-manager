:failreq a minim:Requirement ;
  rdfs:comment
    """
    This requirement should be failed.
    """ ;
  minim:isDerivedBy
    [ a minim:QueryTestRule ;
      minim:query
        [ a minim:SparqlQuery ;
          minim:sparql_query
            """
            ?targetres skos:NoSuchProperty ?value .
            """ ;
        ] ;
      minim:min 1 ;
      minim:max 1 ;
      minim:show "This test should fail" ;
    ] .

